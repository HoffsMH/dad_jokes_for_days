<div class='row'>
  <div class='col-md-12'>
    <div class='panel'>
      <div class='panel-body'>
        <h1 class='text-left'>Your Cart</h1>
      </div>
    </div>
  </div>
</div>
<div class="row">
<div class="col-md-7">
  <div class='panel panel-default'>
    <div class='panel-body'>
      <% if @order_items %>
      <%= render 'cart' %>
      <% else %>
      <%= render 'empty_cart' %>
      <% end %>
    </div>
  </div>

</div>

<div class="col-md-5">
  <div class='panel panel-default'>
    <div class='panel-body'>
      <div class="text-right">
        <%= button_to "Checkout", checkout_path, id: "checkout", class: "form-control btn btn-primary btn-md" %>
        <br>
      </div>
    </div>
  </div>
</div>

</div>
