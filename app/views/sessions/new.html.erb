<% if session[:user] %>
  Please log out Before switching User
<%else %>
  <h1>Login</h1><hr>
  <%= form_for :user, url: {action: "create"}, html: {class: "login"} do |f| %> 
        <%= f.text_field :email, placeholder: 'Email' %><br>
        <%= f.password_field :password, placeholder: 'Password' %><br>

        <%= f.submit "Login" %>
  <% end %>

<% end %>
