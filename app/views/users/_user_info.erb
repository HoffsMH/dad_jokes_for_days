<div class="row">
  <div class="col-md-12">
    <div class="panel panel-default">
      <div class="panel-body">
        <h1>My Account Information</h1>
      </div>
    </div>
  </div>
</div>

<div class="row">
  <div class="col-md-6">
    <div class="panel panel-default">
      <div class="panel-body">
        <%= form_for @user, url: { action: "update" } do |f| %>
        <h2>Username: <%= f.text_field :user_name %></h2>
        <h2>Email: <%= f.text_field :email %></h2>
        <%= f.submit "Update Info" %>
        <% end %>
      </div>
    </div>
  </div>

  <div class="col-md-6">
    <div class="panel panel-default">
      <%= render 'shipping_info' %>
    </div>
  </div>

</div>

<div class="row">
<div class="col-md-12">
  <div class="panel panel-default">
    <div class="panel-heading">
      <h1>Past Orders</h1>
    </div>
    <div class="panel-body">
      <% if @orders.count > 0 %>
        <%= render partial: "/users/order", collection: @orders %>
      <% else %>
        This account has no order history.
      <% end %>
    </div>
  </div>
</div>
</div>
