<div class='row'>
  <div class='col-md-12'>
    <div class='panel'>
      <div class='panel-body'>
        <h1><%= @item.name %></h1>
      </div>
    </div>
  </div>
</div>


<div class="row">
  <%= render "item_show", locals: {item: @item} %>
  <div class="col-md-8">
    <div class="panel panel-default">
      <div class="panel-body">
        <h2>Description</h2>
        <p><%= @item.description %></p>
        <span class='add_to_cart_button'><%= button_to "Add To Cart", cart_path(item_id: @item), class:'btn btn-primary' %></span>
      </div>
    </div>
  </div>
</div>



<div class="row">
  <div class='col-md-12'>
    <div class='panel panel-default'>
      <div class='panel-body'>
        <h2>Comments: </h2>

      </div>
    </div>

  </div>
</div>

<div class="row">
  <div class='col-md-12'>
    <div class='panel panel-default'>
      <div class='panel-body'>
        <div class="col-md-1">
          <%= image_tag('richard.jpg', class: "img-responsive") %>
        </div>
        <div class="col-md-11">
          <br>
          <p class='dad-testimonial'>Seemed like a steep price at first but worth every penny!</p>
          <p>- Richard</p>
        </div>

      </div>
    </div>

  </div>
</div>
