<!DOCTYPE html>
<html>
<head>
  <title>DadJokesForDays</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

  <%= render 'layouts/navbar' %>


  <div class="container">
    <div class="row dad-nav-spacer"> </div>
    <% if flash.alert %>
      <%= render 'layouts/flash_alert' %>
    <% end %>
    
    <% if flash.notice %>
      <%= render 'layouts/flash_notice' %>
    <% end %>
    
    <%= yield %>
  </div>
  
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>

</body>
</html>
